default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: chat
  password: 12345678
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: r-oe13-chatroom

test:
  <<: *default
  database: r-oe13-chatroom

production:
  <<: *default
  url: <%= ENV["DATABASE_URL"] %>
