default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: root
  password:
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: r-oe13-chatroom

test:
  <<: *default
  database: r-oe13-chatroom

production:
  <<: *default
  database: r-oe13-chatroom
  username: chat
  password: <%= ENV['R-OE13-CHATROOM_DATABASE_PASSWORD'] %>
