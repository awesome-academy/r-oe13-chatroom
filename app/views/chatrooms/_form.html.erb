<%= form_for @chatroom, url: yield(:action_path) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :owner_id, value: current_user.id %>
  <div class="input-group">
    <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
    <%= f.text_field :name, class: "form-control", placeholder: t(".name") %>
  </div>
  <center class="btn-active-control">
    <%= f.submit yield(:button_text), class: "btn-success btn-signup" %>
  </center>
<% end %>
