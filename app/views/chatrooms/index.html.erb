<h1><%= t ".chatroom" %></h1>
<table class="table-hover table">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="col-md-12">
    <div class="input-group">
      <%= search_form_for @q do |f| %>
      <div class="col-xs-10">
        <%= f.text_field :name_cont, class: "form-control"%>
      </div>
      <div class="col-xs-2">
        <%= f.submit t("search"), class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
  <tbody id="chatroom">
    <%= render @chatrooms %>
  </tbody>
</table>
  <div class="col-md-12">
    <%= paginate @chatrooms, theme: "twitter-bootstrap-3" %>
  </div>
<br>
<%= link_to t(".new_chatroom"), new_chatroom_path %>
