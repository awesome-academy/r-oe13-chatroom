<div class="container">
  <div class="col-md-5 bound-back">
    <div class="row center-block">
      <h2><%= t ".signup" %></h2>
      <img src="/assets/logo.png" class="img-circle img-logo-small">
    </div>
    <%= form_for :user, url: signup_path do |f| %>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
        <%= f.text_field :name, class: "form-control", placeholder: t(".name") %>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
        <%= f.text_field :email, class: "form-control", placeholder: t(".email") %>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
        <%= f.text_field :email, class: "form-control", placeholder: t(".phone_num") %>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
        <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-repeat"></span></span>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".re_password") %>
      </div>
      <center>
        <%= f.submit t(".signup"), class: "btn-success btn-signup" %>
      </center>
    <% end %>
  </div>
</div>
